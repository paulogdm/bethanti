<div class="main_div mdl-layout__content">
	<div class="main_posts" ng-controller="AllFavoritesController">
		<section ng-repeat="favorite in allFavorites" class="post_container section--center mdl-grid mdl-grid--no-spacing">
			<div class="card_container mdl-card mdl-cell mdl-cell--10-col mdl-shadow--6dp">
				<div class="mdl-card__supporting-text">
					<h3 style="display: inline">{{favorite.title}}</h3>
					<h3 style="display: inline"><i class="mdi mdl-color-text--amber-500 mdi-star"></i></h3>
					<span style="float: right">{{favorite.date | date: "H:mm dd-MMM"}}</span>
					<h4>
						{{favorite.text}}
					</h4>
				</div>

				<div class="actions_container mdl-card__actions mdl-card--border">

					<div class="button_container">
						<button class="button_show mdl-button mdl-js-button mdl-button--raised mdl-button--accent"   ng-class="favorite.liked ? 'mdl-color--green-600' : color_mdl_class_profile"> <b>{{favorite.likes | limitTo:2}}</b>
							<button class="button_hidden mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-color--green-600">
								<i class="material-icons">arrow_upward</i>
							</button>
						</button>
					</div>
					&nbsp;&nbsp;&nbsp;
					<div class="button_container">
						<button class="button_show mdl-button mdl-js-button mdl-button--raised mdl-button--accent" ng-class="favorite.favorited ? 'mdl-color--amber-500' : color_mdl_class_profile"> <b>{{favorite.favorites | limitTo:2}}</b>
						</button>
						<button class="button_hidden mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-color--amber-500">
							<i class="material-icons">star</i>
						</button>
					</div>

					&nbsp;&nbsp;&nbsp;
					<div class="button_container">
						<button class="button_show mdl-button mdl-js-button mdl-button--raised mdl-button--accent" ng-class="favorite.shared ? 'mdl-color--red-600' : color_mdl_class_profile"> <b>{{favorite.forward | limitTo:2}}</b>
						</button>
						<button class="button_hidden mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-color--light-blue-600">
							<i class="material-icons">share</i>
						</button>
					</div>
					<div class="button_container" style="float: right;">
						<button class="button_show mdl-button mdl-js-button mdl-button--raised mdl-color--grey-200 mdl-color-text--grey-600">
							<i class="material-icons">delete</i>
						</button>
						<button class="button_hidden mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-color--red-600">
							<i class="material-icons">delete_forever</i>
						</button>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
