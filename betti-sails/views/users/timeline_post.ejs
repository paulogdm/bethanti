<div class="card_container mdl-card mdl-cell mdl-cell--10-col mdl-shadow--6dp">
	
	<div class="mdl-card__supporting-text card_container_top">
		<a ng-href="./profile/{{post.owner}}" style="text-decoration: none">
			<img class="card_container_avatar" ng-src="{{post.avatar}}">
		</a>

		<a class="card_container_nick" ng-href="./profile/{{post.owner}}" style="display: inline">		@{{post.owner}}
		</a>
		<span class="card_container_date">{{post.date | date: "H:mm dd-MMM"}}</span>

	</div>

	<div class="mdl-card__actions mdl-card--border"></div>

	<div class="mdl-card__supporting-text">
		<h3 style="display: inline">{{post.title}}</h3>
	</div>

	<div class="mdl-card__supporting-text">
		<h4>
			{{post.text}}
		</h4>
	</div>
	<%- include timeline_post_actions.ejs %>
</div>

