<div class="mdl-grid">
	<div ng-repeat="following in allFollow" class="mini_card mdl-card mdl-cell mdl-cell--2-col mdl-shadow--4dp">
		<div class="mini_card_photo mdl-card__supporting-text">
			<img class="card_photo" ng-src="{{following.uphoto}}">
		</div>

		<div class="mini_card_bar mdl-card__title mdl-card--expand <%= styleSwitchEJS(style_profile) %>">
			<div class="mini_bar_content mdl-color-text--white">
				<a class="mdl-color-text--white" ng-href="{{following.login}}" style="text-decoration: none;">
					@{{following.login}}
				</a>
			</div>
		</div>

		<div class="mdl-card__actions mdl-card--border">
			<div class="button_container">
				<button class="button_show mdl-button mdl-js-button mdl-button--raised mdl-button--accent <%= styleSwitchEJS(style_profile) %>" ng-click="viewFollow($index)">
					<i class="material-icons">{{following.following ? 'done' : 'add'}}</i>
				</button>
				<button class="button_hidden mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-color--red-600" ng-class="following.following ? 'mdl-color--red-600' : 'mdl-color--green-600'" ng-click="viewFollow($index)">
					<i class="material-icons">{{following.following ? 'close' : 'done_all'}}</i>
				</button>
			</div>
		</div>
	</div>
</div>